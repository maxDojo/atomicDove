    <div class="row">
        <div class="col-md-9" id="register_div">
            <h1>Start new Game</h1>
            <form action="/register" role="form" id="register_form" method="POST" autocomplete="on">
                <div class="form-group">
                    <label for="username">Desired Username</label>
                    <input type="username" name="username">
                </div>
                <div class="form-group">
                    <label for="email">E Mail</label>
                    <input type="email" name="email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" onchange="clientValidation()">
                </div>
                <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" onchange="clientValidation()" name="confirm_password">
                </div>
                <div class="form-group">
                    <label for="country">Country</label>
                    <input type="select" name="country">
                </div>
                <div class="form-group">
                    <label for="postal_code">Postal Code</label>
                    <input type="text" name="postal_code">
                </div>
                <div class="form-group">
                    <label for="full_name">Full Name</label>
                    <input type="text" name="full_name">
                </div>
                <div class="form-group">
                    <label for="photo">Upload Photo</label>
                    <input type="file" name="photo">
                </div>
                <div class="form-group">
                    <label for="turbo">Turbo Start?</label>
                    <input type="checkbox" name="turbo" value="yes">
                </div>
                <br>
                <div id="error_div"></div>
                <br>
                    <input class="btn btn-primary" type="submit" value="Begin Your Journey" name="register" disabled>
            </form>
        </div>
        <div class="col-md-3">

        </div>
    </div>

