        <div class="main" id="register_div">
            <form action="/register" role="form" id="regForm" method="POST" autocomplete="on">
                <div class="register-tab"><h1>Enter Name and Email</h1>
                        <p><input class="reqInput" type="text" name="full_name" placeholder="Name" oninput="this.className=''" required></p>
                        <p><input class="reqInput" type="email" name="email" placeholder="Email" oninput="this.className=''" required></p>
                        <!-- <p><input placeholder="User name..." oninput="this.className = ''"></p>
                            <p><input placeholder="Last name..." oninput="this.className = ''"></p> -->
                        </div>
                        
                        <div class="register-tab"><h1>Password</h1>
                            <p><input class="reqInput" type="password" name="password" placeholder="Password" oninput="this.className=''" onchange="clientValidation()" required></p>
                            <p><input class="reqInput" type="password" name="confirm_password" placeholder="Confirm Password" oninput="this.className=''" onchange="clientValidation()" required></p>
                            <p><input type="text" name="secret" placeholder="Secret Question" oninput="this.className=''">
                                <input type="text" name="answer" placeholder="Answer" oninput="this.className=''"></p>
                            <!-- <p><input placeholder="Phone..." oninput="this.className = ''"></p> -->
                        </div>
                        
                        <div class="register-tab"><h1>Display Name</h1>
                            <select name="title" placeholder="Title" oninput="this.className=''">
                                <option value="Nigeria">General</option>
                                <option value="Nigeria">Emperor</option>
                                <option value="Nigeria">King</option>
                            <input type="text" placeholder="Other(specify)">
                            </select>
                            <p><input class="reqInput" type="username" name="username" placeholder="Desired Username" oninput="this.className=''" required></p>
                        <!-- <p><input placeholder="mm" oninput="this.className = ''"></p>
                            <p><input placeholder="yyyy" oninput="this.className = ''"></p> -->
                        </div>
                        
                        <div class="register-tab"><h1>Contact Info</h1>
                            <p>
                                <select name="country" placeholder="Country" oninput="this.className=''">
                                <option value="Nigeria">Nigeria</option>
                                </select>
                            </p>
                            <p><input type="number" name="postal_code" placeholder="Postal Code" oninput="this.className=''"></p>
                        <!-- <p><input placeholder="Username..." oninput="this.className = ''"></p>
                        <p><input placeholder="Password..." oninput="this.className = ''"></p> -->
                    </div>
                    
                    <div style="overflow:auto;">
                        <div style="float:right;">
                        <button type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
                        <button type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
                        </div>
                    </div>
                    
                    <!-- Circles which indicates the steps of the form: -->
                    <div style="text-align:center;margin-top:40px;">
                        <span class="step"></span>
                        <span class="step"></span>
                        <span class="step"></span>
                        <span class="step"></span>
                    </div>
